<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="data"
            type="com.example.techorbit.model.reports.terminal.Data" />
    </data>
<LinearLayout
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@{data.serviceName}"
        android:layout_weight="1.5"
        android:textSize="15sp"
        android:gravity="start"

        android:textColor="@color/black"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@{String.valueOf(data.totalCount)}"
        android:layout_weight="1.5"
        android:textSize="15sp"
        android:gravity="center"

        android:textColor="@color/black"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@{String.valueOf(data.totalMRP)}"
        android:layout_weight="2"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@{String.valueOf(data.totalCommission)}"
        android:layout_weight="2"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/black"/>

</LinearLayout>
</layout>
